@model List<Data.Access.Layer.Classes.BookTransactions>;

@{
    ViewData["Title"] = "Report";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Report</h1>

<table class="fixed_headers">
    <thead>
        <tr>
            <th>Member</th>
            <th>Book</th>
            <th>Borrowing Date</th>
            <th>Return Date</th>
            <th>Penalty Calculation</th>
        </tr>
    </thead>
    <tbody>
        @{
            for (int i = 0; i < Model.Count(); i++)
            {
                <tr>
                    <td>@Model[i].Member.Name @Model[i].Member.Surname</td>
                    <td>@Model[i].Book.Name</td>
                    <td>@Model[i].BorrowingDate.ToShortDateString()</td>
                    <td>@Model[i].ReturnDate.ToShortDateString()</td>
                    <td>@Model[i].PenaltyCalculation</td>
                </tr>
            }
        }
    </tbody>
</table>

