@model List<Data.Access.Layer.Classes.Books>;

@{
    ViewData["Title"] = "Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    for (int i = 0; i < Model.Count(); i++)
    {
        <div class="card">
            <div class="card-body">
                <ul class="navbar-nav flex-grow-1 text-right">
                    <li class="nav-item">
                        <a class="nav-link text-primary" asp-area="" asp-controller="Books" asp-action="Edit" asp-route-id="@Model[i].ID">Edit Book</a>
                    </li>
                </ul>
                <h4 class="card-title">@Model[i].Name - @Model[i].ISBN</h4>
                <p class="card-text">Loan Date: @Model[i].LoanDate.ToShortDateString()</p>
                <p class="card-text">Stock Quantity: @Model[i].StockQuantity</p>
                <a class="btn btn-primary" asp-area="" asp-controller="Books" asp-action="Details" asp-route-id="@Model[i].ID">See Details</a>
                <a class="btn btn-primary" asp-area="" asp-controller="Rezervations" asp-action="Create">Create Rezervation</a>
            </div>
        </div>
    }
}

