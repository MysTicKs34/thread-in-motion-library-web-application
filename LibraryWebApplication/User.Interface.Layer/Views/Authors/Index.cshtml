@model List<Data.Access.Layer.Classes.Authors>;

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ul class="navbar-nav flex-grow-1">
    <li class="nav-item">
        <a class="nav-link text-light btn btn-primary" asp-area="" asp-controller="Authors" asp-action="Create">Add New Author</a>
    </li>
</ul>

@{
    for (int i = 0; i < Model.Count(); i++)
    {
        <div class="card">
            <div class="card-body">
                <ul class="navbar-nav flex-grow-1 text-right">
                    <li class="nav-item">
                        <a class="nav-link text-primary" asp-area="" asp-controller="Authors" asp-action="Edit" asp-route-id="@Model[i].ID">Edit Author</a>
                    </li>
                </ul>
                <h4 class="card-title">@Model[i].Name @Model[i].Surname</h4>
                <p class="card-text">@Model[i].BirthDate.ToShortDateString()</p>
                <a class="btn btn-primary" asp-area="" asp-controller="Authors" asp-action="Details" asp-route-id="@Model[i].ID">See Details</a>
            </div>
        </div>
    }
}
