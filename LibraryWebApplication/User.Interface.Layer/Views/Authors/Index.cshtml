@model List<Data.Access.Layer.Classes.Authors>;

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ul class="navbar-nav flex-grow-1">
    <li class="nav-item">
        <a class="nav-link text-light btn btn-primary" asp-area="" asp-controller="Authors" asp-action="Create">Add New Author</a>
    </li>
</ul>

@{
    for (int i = 0; i < Model.Count(); i++)
    {
        <ul>
            <li>@Model[i].Name</li>
            <li>@Model[i].Surname</li>
            <li>@Model[i].Birthdate</li>
        </ul>
    }
}

